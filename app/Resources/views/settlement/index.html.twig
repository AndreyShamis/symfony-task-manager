{% extends 'WerdGameBundle:Default:index.html.twig' %}

{% block content %}
    <h1>Settlements list</h1>

    <table class="records_list table table-striped table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Coordinatex</th>
                <th>Coordinatey</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for settlement in settlements %}
            <tr>
                <td><a href="{{ path('settlement_show', { 'id': settlement.id }) }}">{{ settlement.id }}</a></td>
                <td>{{ settlement.name }}</td>
                <td>{{ settlement.coordinateX }}</td>
                <td>{{ settlement.coordinateY }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('settlement_show', { 'id': settlement.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('settlement_edit', { 'id': settlement.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('settlement_new') }}">Create a new settlement</a>
        </li>
    </ul>
{% endblock %}
